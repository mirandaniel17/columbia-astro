---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SectionContainer from '../components/SectionContainer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
<head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <!-- Asegúrate de incluir el CSS de Tailwind aquí -->
</head>
<body class="bg-gray-50">
    <Header />
    
	<div class="logo-container"> <!-- Contenedor del logo -->
         <img  src="/itc_logo.png" class="lg:w-2/6 md:w-3/6 w-5/6 mb-10 object-cover object-center rounded" alt="hero" id="hero">
    </div> 

    <main>
        <section class="container mx-auto flex flex-col items-center justify-center px-5 py-10">
            <div class="text-center lg:w-2/3 w-full">
                <h1 class="title-font md:text-4xl text-4xl mb-4 font-extrabold text-gray-900 text-pretty">
                    INSTITUTO TÉCNICO COLUMBIA
                </h1>
                <p class="mb-8 leading-relaxed">¡Formando Profesionales desde el 2017!</p>
                <p class="mb-8 leading-relaxed">RM 2886/17 1056/23</p>
                <div class="flex justify-center">
                    <a href="#" class="inline-flex items-center text-white bg-gradient-to-br from-blue-500 to-blue-900 border-0 py-2 px-6 focus:outline-none hover:from-blue-400 hover:to-blue-800 rounded text-lg hover:text-white">
                        VER CURSOS
                    </a>
                    <a href="#" class="ml-4 inline-flex text-gray-700 bg-gray-100 border-0 py-2 px-6 focus:outline-none hover:bg-gray-200 rounded hover:text-gray-700 text-lg">
                        ANUNCIOS
                    </a>
                </div>
            </div>

        </section>
    </main>

    <Footer />
	
</body>
</html>

<style>
	body {
    font-family: 'Nunito', sans-serif; /* Usa la fuente Nunito */
    margin: 0;
    padding: 0;
    background-color: #ffffff; /* Color de fondo suave */
}

body {
        font-family: 'Nunito', sans-serif; /* Usa la fuente Nunito */
        margin: 0;
        padding: 0;
        background-color: #f9fafb; /* Color de fondo suave */
    }

    /* Clase personalizada para el contenedor del logo */
    .logo-container {
    display: flex;
    justify-content: center; /* Centra el logo horizontalmente */
    margin-top: 150px; /* Aumenta este valor para mover el logo más abajo */
    width: 100%; /* Asegura que el contenedor ocupe todo el ancho */
}

.logo-container img {
    max-width: 150px; /* Ajusta el tamaño máximo del logo */
    height: auto; /* Mantiene la proporción original */
}
.container {
    max-width: 1200px; /* Ancho máximo del contenedor */
    margin: auto; /* Centrar el contenedor */
    padding: 0 20px; /* Espaciado interior */
}
/* Clase personalizada para el contenedor de la imagen */
#hero {
    transition: all 0.3s ease; /* Transición suave para cambios de tamaño */
    border-radius: 12px; /* Borde redondeado */
}
img {
    margin-top: 20px; /* Ajusta el margen superior según necesites */
    max-width: 100%; /* Asegúrate que el logo no exceda el contenedor */
    height: auto; /* Mantiene la proporción del logo */
}

/* Ajuste de la imagen en diferentes tamaños de pantalla */
@media (min-width: 1024px) {
    #hero {
        width: 25%; /* 25% del contenedor en pantallas grandes */
    }
}

@media (min-width: 768px) and (max-width: 1023px) {
    #hero {
        width: 33.333%; /* 1/3 del contenedor en pantallas medianas */
    }
}

@media (min-width: 640px) and (max-width: 767px) {
    #hero {
        width: 66.666%; /* 2/3 del contenedor en pantallas pequeñas */
    }
}

@media (max-width: 639px) {
    #hero {
        width: 100%; /* 100% del contenedor en pantallas muy pequeñas */
    }
}

/* Estilo para los botones */
a {
    display: inline-block;
    text-decoration: none;
    font-weight: bold;
    padding: 12px 24px;
    border-radius: 8px;
    transition: background-color 0.3s ease, color 0.3s ease; /* Transición suave para hover */
}

a:hover {
    opacity: 0.9; /* Efecto de hover */
}

/* Estilos para el contenedor principal */
.container {
    max-width: 1200px; /* Ancho máximo del contenedor */
    margin: auto; /* Centrar el contenedor */
    padding: 0 20px; /* Espaciado interior */
}

h1 {
    font-size: 2rem; /* Tamaño de fuente */
    color: #1a202c; /* Color de texto */
}

p {
    color: #4a5568; /* Color del texto */
}

@media (max-width: 768px) {
    h1 {
        font-size: 1.5rem; /* Tamaño de fuente en pantallas pequeñas */
    }
}



.bg-gray-100 {
    background-color: #f7fafc; /* Color de fondo gris claro */
}

.bg-gray-200 {
    background-color: #edf2f7; /* Color de fondo gris claro */
}

.hover\:from-blue-400:hover {
    background-color: #63b3ed; /* Color de fondo al hacer hover */
}

.hover\:to-blue-800:hover {
    background-color: #2c5282; /* Color de fondo al hacer hover */
}

</style>
